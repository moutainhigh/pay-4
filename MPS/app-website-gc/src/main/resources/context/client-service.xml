<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:/opt/pay/hessian/hessian.properties</value>
			</list>
		</property>
		<property name="order" value="1" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="fileEncoding">
			<value>UTF-8</value>
		</property>
	</bean>
    <!--
	<bean id="client-txnCoreService"
		class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
		<property name="serviceUrl" value="${hessian.txncoreUrl}" />
		<property name="serviceInterface" value="com.pay.inf.service.HessianInvokeService" />
	</bean>
	  -->
	 <bean id="txnCoreService"
		class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
		<property name="serviceUrl" value="${hessian.txncoreUrl}" />
		<property name="serviceInterface" value="com.pay.inf.service.HessianInvokeService" />
	</bean>
	<bean id="orderCoreService"
		class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
		<property name="serviceUrl" value="${order.txncoreUrl}" />
		<property name="serviceInterface" value="com.pay.inf.service.HessianInvokeService" />
	</bean>
	
	<bean id="settleCoreService"
		class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
		<property name="serviceUrl" value="${settle.txncoreUrl}" />
		<property name="serviceInterface" value="com.pay.inf.service.HessianInvokeService" />
	</bean>

	<bean id="channelService"
		class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
		<property name="serviceUrl" value="${hessian.channelUrl}" />
		<property name="serviceInterface" value="com.pay.inf.service.HessianInvokeService" />
	</bean>

	<bean id="txncoreClientService" class="com.pay.app.client.TxncoreClientService">
		<property name="invokeService" ref="orderCoreService" />
	</bean>
	
	<bean id="truetxncoreClientService" class="com.pay.app.client.TrueTxncoreClientService">
		<property name="invokeService" ref="txnCoreService" />
	</bean>
	
	<bean id="settleCoreClientService" class="com.pay.app.client.SettleCoreClientService">
		<property name="invokeService" ref="settleCoreService" />
	</bean>
	
	<bean id="refundOrderService" class="com.pay.fi.hession.RefundOrderService">
		<property name="invokeService" ref="orderCoreService" />
		<property name="txnCoreService" ref="txnCoreService" />
	</bean>

	<bean id="crosspayWebsiteConfigService" class="com.pay.fi.hession.CrosspayWebsiteConfigService">
		<property name="invokeService" ref="orderCoreService" />
	</bean>

	<bean id="gatewayOrderQueryService" class="com.pay.fi.hession.GatewayOrderQueryService">
		<property name="invokeService" ref="orderCoreService" />
	</bean>

	<bean id="expressTrackingService" class="com.pay.fi.hession.ExpressTrackingService">
		<property name="invokeService" ref="orderCoreService" />
	</bean>

	<bean id="settlementOrderService" class="com.pay.fi.hession.SettlementOrderService">
		<property name="invokeService" ref="orderCoreService" />
	</bean>

	<bean id="refusePaymentService" class="com.pay.fi.hession.RefusePaymentService">
		<property name="invokeService" ref="orderCoreService" />
	</bean>

	<bean id="channelClientService" class="com.pay.app.client.ChannelClientService">
		<property name="invokeService" ref="channelService" />
	</bean>

</beans>