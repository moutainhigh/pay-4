<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">	<!-- DataSource -->

	<bean id="app-mailService"
		class="com.pay.app.service.mail.impl.PayMailServiceImpl">
		<property name="mainDao" ref="checkCodeDAO" />
		<property name="sendMailManager" ref="app-sendMailManager" />
	</bean>
	
	<bean id="app-smsService"
		class="com.pay.app.service.sms.impl.SmsServiceImpl">
		<property name="sendSmsManager" ref="app-sendSmsManager" />
		<property name="checkCodeService" ref="app-mailService" />
	</bean>
	
</beans> 